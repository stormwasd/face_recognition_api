# 应用配置
APP_NAME=人脸识别API
APP_VERSION=1.0.0
APP_DESCRIPTION=基于InsightFace的高性能人脸对比服务

# 服务器配置
HOST=0.0.0.0
PORT=8000
WORKERS=4

# InsightFace模型配置
MODEL_NAME=buffalo_l
DET_SIZE=(640, 640)
PROVIDER=CPUExecutionProvider  # 如果有GPU，改为CUDAExecutionProvider
CTX_ID=0

# 人脸识别阈值
SIMILARITY_THRESHOLD=0.65
HIGH_CONFIDENCE_THRESHOLD=0.75
MEDIUM_CONFIDENCE_THRESHOLD=0.60

# 文件限制
MAX_FILE_SIZE=10485760  # 10MB

# 并发配置
THREAD_POOL_WORKERS=8

# 缓存配置（可选）
ENABLE_CACHE=False
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL=3600

